{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug TypeScript in Node.js",
            "program": "${file}",
            "cwd": "${workspaceFolder}",
            "protocol": "inspector",
            "outFiles": [
              "${workspaceFolder}/lib/**/*.js",
              "${workspaceFolder}/test/lib/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "cwd": "${workspaceFolder}/test",
            "args": [
                "--require", "ts-node/register",
                "--require", "tsconfig-paths/register",
                "--colors", "--recursive",
                "test.js"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
          "type": "node",
          "request": "launch",
          "name": "CompiledCodeRunner",
          "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
          "cwd": "${workspaceFolder}/test",
          "args": [
              "--require", "ts-node/register",
              "--require", "tsconfig-paths/register",
              "--colors", "--recursive",
              "${workspaceFolder}/test/src/testSuites/CompiledCodeRunner.ts"
          ],
          "internalConsoleOptions": "openOnSessionStart"
        },
        {
          "type": "node",
          "request": "launch",
          "name": "ProjectTest",
          "program": "${workspaceFolder}/test/lib/ProjectTest.js",
          "cwd": "${workspaceFolder}",
          "protocol": "inspector",
          "autoAttachChildProcesses": false,
          "console": "integratedTerminal"
        },
        {
          "type": "node",
          "request": "launch",
          "name": "CrossCompiledTestRunner",
          "program": "${workspaceFolder}/test/lib/CrossCompiledTestRunner.js",
          "cwd": "${workspaceFolder}",
          "protocol": "inspector",
          "autoAttachChildProcesses": false,
          "console": "integratedTerminal"
        },
        {
          "type": "node",
          "request": "launch",
          "name": "SelfTest",
          "program": "${workspaceFolder}/test/lib/SelfTest.js",
          "cwd": "${workspaceFolder}",
          "protocol": "inspector"
        },
        {
          "type": "node",
          "request": "launch",
          "name": "CompilationTest",
          "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
          "cwd": "${workspaceFolder}/test",
          "args": [
            "--require", "ts-node/register",
            "--require", "tsconfig-paths/register",
            "--colors", "--recursive",
            "${workspaceFolder}/test/src/testSuites/CompilationTest.ts"
          ],
          "internalConsoleOptions": "openOnSessionStart"
        },
        {
          "type": "node",
          "request": "launch",
          "name": "QuickCompileTest",
          "program": "${workspaceFolder}/test/lib/QuickCompileTest.js",
          "cwd": "${workspaceFolder}",
          "protocol": "inspector"
        },
        {
          "type": "node",
          "request": "launch",
          "name": "Generate AST helper code",
          "program": "${workspaceFolder}/build/generate-ast-helper-code.js",
          "cwd": "${workspaceFolder}",
          "protocol": "inspector"
        }
    ]
}